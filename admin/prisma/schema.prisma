generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PREPARING
  SHIPPED
  DELIVERED
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  NOT_ISSUED
  ISSUED
  PAID
}




model Product {
  id          String      @id @default(uuid())
  name        String
  price       Decimal

  description String?
  imageUrl    String?
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Order {
  id            String        @id @default(uuid())
  items         OrderItem[]
  totalAmount   Decimal
  status        OrderStatus   @default(PENDING)
  invoiceStatus InvoiceStatus @default(NOT_ISSUED)
  
  // Customer & Shipping Info
  email         String
  name          String
  surname       String
  phone         String        // E.g. +905XXXXXXXXX
  orderNumber   String        @unique // Short readable ID for tracking e.g. S-123456
  trackingToken String?       @unique // Secure Token for tracking links (UUID)
  address       String        // Mahalle, sokak, no bilgisi
  city          String        // Iyzico: city
  district      String        // Iyzico: district
  zipCode       String        // Iyzico: zipCode
  country       String        @default("Turkey") // Iyzico: country
  
  // Corporate Invoice Info
  isCorporate   Boolean       @default(false)
  companyName   String?
  taxOffice     String?
  taxNumber     String?

  // Payment Info (Iyzico)
  paymentId     String?
  paymentToken  String?       @unique // Iyzico Token for callback lookup
  paymentStatus String?       @default("PENDING") // SUCCESS, FAILURE
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}
